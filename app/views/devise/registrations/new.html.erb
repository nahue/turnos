<!-- REGISTER FORM -->
      <%= simple_form_for(resource, :as => resource_name,
    :url => registration_path(resource_name), wrapper: :bootstrap_login,
    :html => { :id => 'form-register', :class => 'form-horizontal form-bordered', :role => "form" }, defaults: {input_html: {class: 'input-lg', size: '255'} }) do |f| %>


      <%= f.input :username, placeholder: "Usuario", label: false, icon_html: {class: 'gi-user'} %>
      <%= f.input :email, placeholder: "Email", label: false, icon_html: {class: 'gi-envelope'} %>
      <%= f.input :password, placeholder: "Contraseña", label: false, icon_html: {class: 'gi-asterisk'} %>
      <%= f.input :password_confirmation, placeholder: "Confirme la Contraseña", label: false, icon_html: {class: 'gi-asterisk'} %>

      <div class="form-group form-actions">
        <div class="col-xs-12 text-right">
            <%= f.submit "Registrarse", class: "btn btn-sm btn-success" %>
        </div>
      </div>
      <div class="form-group">
                        <div class="col-xs-12">
                            <p class="text-center remove-margin"><small>Oops, ya tienes una cuenta?</small> <a href="<%= new_user_session_path %>"><small>Inicie Sesion!</small></a></p>
                        </div>
                    </div>
      <% end %>

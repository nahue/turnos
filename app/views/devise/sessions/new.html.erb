
    <%= simple_form_for(resource, :as => resource_name,
    :url => session_path(resource_name),
    role: "form", :html => {:id => 'form-login', :class => 'form-horizontal form-bordered form-control-borderless'},defaults: {input_html: {class: 'input-lg', size: '255'} }) do |f| %>

      <%= f.input :username, placeholder: "Usuario", label: false, icon_html: {class: 'gi-user'}, wrapper: :bootstrap_login %>
      <%= f.input :password, placeholder: "Contraseña", label: false, icon_html: {class: 'gi-asterisk'}, wrapper: :bootstrap_login %>

      <div class="form-group form-actions">

        <% if devise_mapping.rememberable? -%>
        <div class="col-xs-4">
          <%= f.input :remember_me, :as => :boolean, :boolean_style => :inline, :wrapper => :checkbox2, :label => false, :input_html => {:id => 'login-remember-me'}, :switch_html => {:title => "Recordarme",:data => {:toggle => "tooltip"}}%>

        </div>
        <% end -%>

        <div class="col-xs-8 text-right">

            <%= f.button :magic_submit, class: "btn btn-sm btn-primary" %>

        </div>
      </div>
      <div class="form-group">
          <div class="col-xs-12">
              <p class="text-center remove-margin"><small>No tienes una cuenta?</small> <a href="javascript:void(0)" id="link-login"><small>Hazte una gratis!</small></a></p>
          </div>
      </div>
      <% end %>

      <!-- REGISTER FORM -->

      <%= simple_form_for(resource, :as => resource_name,
    :url => registration_path(resource_name), wrapper: :bootstrap_login,
    :html => { :id => 'form-register', :class => 'form-horizontal form-bordered display-none', :role => "form" }, defaults: {input_html: {class: 'input-lg', size: '255'} }) do |f| %>


      <%= f.input :username, placeholder: "Usuario", label: false, icon_html: {class: 'gi-user'} %>
      <%= f.input :email, placeholder: "Email", label: false, icon_html: {class: 'gi-envelope'} %>
      <%= f.input :password, placeholder: "Contraseña", label: false, icon_html: {class: 'gi-asterisk'} %>
      <%= f.input :password_confirmation, placeholder: "Confirme la Contraseña", label: false, icon_html: {class: 'gi-asterisk'} %>

      <div class="form-group form-actions">
        <div class="col-xs-12 text-right">
            <%= f.submit "Registrarse", class: "btn btn-sm btn-success" %>
        </div>
      </div>
      <div class="form-group">
                        <div class="col-xs-12">
                            <p class="text-center remove-margin"><small>Oops, ya tienes una cuenta?</small> <a href="javascript:void(0)" id="link-register"><small>Inicie Sesion!</small></a></p>
                        </div>
                    </div>
      <% end %>
      <% render "devise/shared/links" %>

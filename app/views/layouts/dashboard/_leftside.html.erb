<!-- Left side column. contains the logo and sidebar -->
            <aside class="left-side sidebar-offcanvas">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="pull-left image">
                          <%= image_tag current_user.avatar_url, :class=>"img-circle", :alt=>"User Image" %>
                        </div>
                        <div class="pull-left info">
                            <p>Hola, <%= current_user.username.capitalize %></p>

                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>

                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    <ul class="sidebar-menu">
                        <li <% if active == 'base' %> class="active"<% end %> >
                          <%= link_to raw("<i class=\"fa fa-dashboard\"></i> <span>Dashboard</span>"), admin_root_path %>
                        </li>
                        <li <% if active == 'users' %> class="active"<% end %> >
                          <%= link_to raw("<i class=\"fa fa-user\"></i> <span>Usuarios</span>"), admin_users_path %>
                        </li>
                        <li <% if active == 'events' %> class="active"<% end %> >
                          <%= link_to raw("<i class=\"fa fa-calendar\"></i> <span>Eventos</span>"), admin_events_path %>
                        </li>
                    </ul>
                </section>
                <!-- /.sidebar -->
            </aside>
